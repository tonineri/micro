#!/bin/bash

PIDFILE="/var/run/syslog-ng.pid"

syslogng_wait() {
    if [ "$2" -ne 0 ]; then
        return 1
    fi

    for i in {1..30}; do
        if ! syslog-ng-ctl stats >/dev/null 2>&1; then
            return 0
        fi
        sleep 1
    done
    return 1
}

if [ -f "$PIDFILE" ]; then
    kill "$(cat "$PIDFILE")"
    syslogng_wait 0 $?
fi
